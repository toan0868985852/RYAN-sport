@using Microsoft.AspNetCore.Identity
@using Admin2.Areas.Identity.Data

@inject SignInManager<Admin2User> SignInManager
@inject UserManager<Admin2User> UserManager

<ul class="nav pull-right top-menu">
    @if (SignInManager.IsSignedIn(User))
    {

        <li>
            <input type="text" class="form-control search" placeholder=" Search">
        </li>
        <li class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle"id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <span class="username">@UserManager.GetUserName(User)!</span>
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu extended logout">
                <li><a href="#"><i class=" fa fa-suitcase"></i>Profile</a></li>
                <li><a href="#"><i class="fa fa-cog"></i> Settings</a></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>

            </ul>
        </li>
    
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
    </ul>
